<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_colour"
    android:weightSum="1">

    <ImageView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/imageView"
        android:layout_weight="0.32"
        android:src="@drawable/ridr"
        android:scaleType="centerInside"
        android:cropToPadding="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:largeHeap="true"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/tertiary_colour"
        android:layout_gravity="center"
        android:text="Ridr"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20sp"
        android:textColor="@color/primary_colour"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"
        android:textSize="22sp"
        android:paddingTop="10sp"
        android:paddingBottom="5sp"
        android:background="@color/primary_colour"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp" />    

    <Button
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:background="@color/tertiary_colour"
        android:text="Submit"
        android:textColor="@color/primary_colour"
        android:layout_gravity="center_horizontal" />
</LinearLayout>