<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ca.ualberta.ridr.AddDriverView"
    android:animationCache="true"
    android:scrollbars="vertical"
    android:background="@color/secondary_colour">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/create_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create_account_title_text"
                android:textSize="40sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10dp"
                android:typeface="normal"
                android:textColor="@color/primary_colour" />

            <TextView
                android:text="@string/create_account_subtitle"
                android:layout_height="wrap_content"
                android:id="@+id/create_account_subtitle_text"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center"
                android:gravity="center" />

            <TextView
                android:text="@string/username_add_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username_add_account_text"
                android:textStyle="normal"
                android:textColor="@color/primary_colour"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/username_add_account_edit_text"
                android:background="@color/primary_colour"
                android:textColor="?android:attr/colorPrimary"
                android:textSize="22sp"
                android:paddingTop="10sp"
                android:paddingBottom="5sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/username_add_account_edit_text"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:text="@string/dob_add_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dob_add_account_text"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@color/primary_colour"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/dob_add_account_edit_text"
                android:background="@color/primary_colour"
                android:textColor="?android:attr/colorPrimary"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="22sp"
                android:paddingTop="10sp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/dob_add_account_edit_text"
                android:textColorHint="@android:color/darker_gray"/>

            <TextView
                android:text="@string/email_add_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_add_account_text"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@color/primary_colour"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email_add_account_edit_text"
                android:background="@color/primary_colour"
                android:textColor="?android:attr/colorPrimary"
                android:textSize="22sp"
                android:paddingTop="10sp"
                android:paddingBottom="5sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/email_add_account_edit_text"
                android:textColorHint="@android:color/darker_gray"/>

            <TextView
                android:text="@string/phone_add_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_add_account_text"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@color/primary_colour"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/phone_add_account_edit_text"
                android:background="@color/primary_colour"
                android:inputType="phone"
                android:textColor="?android:attr/colorPrimary"
                android:textSize="22sp"
                android:paddingTop="10sp"
                android:paddingBottom="5sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/phone_add_account_edit_text"
                android:textColorHint="@android:color/darker_gray"/>


            <TextView
                android:text="@string/credit_add_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/credit_add_account_text"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@color/primary_colour"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/credit_add_account_edit_text"
                android:background="@color/primary_colour"
                android:inputType="number"
                android:textColor="?android:attr/colorPrimary"
                android:textSize="22sp"
                android:paddingTop="10sp"
                android:paddingBottom="5sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/credit_add_account_edit_text"
                android:textColorHint="@android:color/darker_gray"/>



        </LinearLayout>
    </ScrollView>
    <Button
        android:text="@string/create_account_button"
        android:layout_height="wrap_content"
        android:id="@+id/create_account_button"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:layout_marginTop="40dp" />
</LinearLayout>
